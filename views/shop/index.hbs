<div id="filter1" class="push">
  {{# each products }}
  <div class="row">
    {{# each this }}

  <div id="order" class="hidden">
  <div id="order-head">
    <p>ADD TO CART</p>

    <button id="x-img" type="button" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
      integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script type="text/javascript">
      $(document).ready(function () {
        $('#x-img').click(function () {
          $('#order').addClass('hidden');
        });
      });
    </script>
  </div>
  <div id="product-detail">
    <div id="img-detail">
      <img src="{{ this.imagepath }}" alt="..." class="img-responsive">
    </div>
    <div id="detail">
      <!-- overview -->
      <div id="overview">
        <div id="order-code">
          <p>Name</p>
          <p>{{ this.name }}</p>
        </div>
        <div id="order-name">
          <p>Category</p>
          <p>{{ this.category }}</p>
        </div>
        <div id="unit-price">
          <p>Unit Price</p>
          <strong>{{ this.price }}$</strong>
        </div>
      </div>
      <!-- quantity -->
      <div id="quantity">
      </div>
      <div id="more-detail">
        <p><strong>Protein: </strong> To the moon</p>
        <p><strong>Additives: </strong> 3</p>
        <p><strong>Banking material: </strong> 040</p>
        <p><strong>Food decoration: </strong> 04</p>
      </div>
      <div class="btn-group  pull-left">
        <a href="/add-to-cart/{{this._id}}" class="btn btn-primary btn-success">Add to cart</a>
      </div>
    </div>
  </div>
</div>










    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <img src="{{ this.imagepath }}" alt="..." class="img-responsive">
        <div class="caption">
          <h3>{{ this.name }}</h3>
          <div class="clearfix">
            <div class="btn-group  pull-left">
              <a id="view_" class="btn btn-primary btn-success">View</a>
            </div>
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"
              integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
            <script type="text/javascript">
              $('.btn-primary').each(function () {
                $(this).click(function () {
                  $('#order').removeClass('hidden');
                });
              });
            </script>
            <div class="btn-group  pull-right">
              <a href="/delete/{{this._id}}" class="btn btn-default btn-fail">Delete</a>
            </div>
            {{!-- <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to Shopping
              Cart</a> --}}
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{/each}}
</div>